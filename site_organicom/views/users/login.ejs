<!DOCTYPE html>
<html lang="es">

<head>
   <%- include("../partials/head", {title: "Registro"}) %>

   <link rel="stylesheet" href="/css/register.css">
   <script src="https://kit.fontawesome.com/c798016428.js" crossorigin="anonymous"></script>
 
</head>

<body class="register">

   <%- include("../partials/carrito-lateral") %>
   <!-- PRESTAR ATENCION A LAS RUTAS DE INCLUDE EN GENERAL -->

   <main>
      <form class="register-form" action="/users/userLogin" method="POST">
         <div class="encabezado">
            <h1 class="titulo">Inicio de sesión</h1>
            <p style="text-align: center; color:red"><%= locals.errors && errors.email ? errors.email.msg : null %> </p>      

         </div>
         <div class="register-main">
            <label for="email">Email</label>
            <input class="register_input-main" type="email" id="email" name="email" placeholder="email" autocomplete="off">
         </div>
         <div class="register-main">
            <label for="password">Password</label>
            <input class="register_input-main" type="password" id="register-password" name="password" placeholder="password" >
         </div>
         <div class="register-main">
            <label for="recuerdame">
                <input type="checkbox" name="recuerdame" id="recuerdame" checked>
                Recuerdame
             </label>
             <p>¿No estás registrado? <a href="/users/register">Registrate</a></p>
         </div>
         <div class="register-main button-register">          
            <button type="submit">
               Ingresar
            </button>
         </div>
      </form>
   </main>

   <%- include("../partials/footer") %>

   <script src="/js/general.js"></script>
</body>

</html>